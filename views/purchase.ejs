</script>
<div class="purchase policy">
    <div class="purchase-title policy-title privacy-header text-center mb-4">
        <span>Purchase</span>
    </div>

    <div class="purchase-content my-5">
        <% items.bot.forEach((item)=> { %>
        <div class="row justify-content-center mb-3">
            <div class="col-md-10 col-lg-8 shop-item row" data-item-id="<%= item.id %>">
                <div class="shop-item-title col-6 mt-1"><%= item.name %></div>
                <div class="shop-item-price col-3 mt-1">$<%= item.price / 100 %></div>
                <div class="shop-item-count col-3 mt-1">x <%= item.quantity %></div>
            </div>
        </div>
        <% }) %>
    </div>
    <div class="purchase-summary text-center my-5">
        <span>Total: $<span id="total-price">
                <%= items.bot.map(x => x.price * x.quantity).reduce((a, b) => a + b, 0) / 100 %></span></span>
    </div>
    <div class="row my-5 justify-content-center">
        <div class="buy-btn-container">
            <input type="email" class="form-control" id="buy-custom-email" placeholder="name@example.com">
        </div>
        <div class="buy-btn-container">
            <a onClick="purchaseClicked()" class="buy-btn"><span>Buy</span></a>
        </div>
    </div>
</div>

<div class="purchase-loading policy">
    <div class="purchase-title policy-title privacy-header text-center mb-4">
        <span>Redirect to Stripe ...</span>
    </div>
    <div class="text-center my-5">
        <img src="https://gifimage.net/wp-content/uploads/2017/08/loading-gif-transparent-6.gif" class="img-fluid"
            alt="loading">
    </div>
</div>